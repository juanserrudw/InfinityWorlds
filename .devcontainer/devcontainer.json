{
  "name": "InfinityWorlds",
  "dockerComposeFile": "docker-compose.yml",  
  "service": "web",                           
  "workspaceFolder": "/workspace/infiniteworlds_frontend", 
  "extensions": [
    "ms-dotnettools.csharp",                   // Extensión para C#
    "ms-azuretools.vscode-docker",             // Extensión para Docker
    "ms-mssql.sql-tools"                        // Extensión para SQL Server
  ],
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"  // Cambia a bash como perfil de terminal
  },
  "postCreateCommand": "dotnet restore",       // Restaura dependencias después de crear el contenedor
  "remoteUser": "root"                         // Usuario remoto a utilizar
}





