@model infiniteworlds_fronted.Models.UserProfileViewModel

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; padding-top: 60px;">
    <div class="card mt-4" style="width: 80%;">
        <div class="card-header text-center">
            <h1>Editar Perfil</h1>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @* Campo oculto para el UserId *@
                <input type="hidden" asp-for="UserId" />
                 <input type="hidden" asp-for="UserProfileId" />


                <div class="form-group row mb-3">
                    <label asp-for="LastName" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="Description" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <label asp-for="ProfilePictureUrl" class="col-sm-2 col-form-label font-weight-bold"></label>
                    <div class="col-sm-10">
                        <input asp-for="ProfilePictureUrl" class="form-control" />
                        <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-3">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
