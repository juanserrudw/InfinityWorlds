@model infiniteworlds_frontend.Models.Game

@{
    ViewData["Title"] = "Game Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h2>Game Details</h2>

    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.GameId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">Genre</dt>
        <dd class="col-sm-9">@Model.Genero</dd>

        <dt class="col-sm-3">Release Date</dt>
        <dd class="col-sm-9">@Model.ReleaseDate.ToShortDateString()</dd>
    </dl>

    <h3>Players</h3>
    <ul>
        @if (Model.Players != null && Model.Players.Any())
        {
            foreach (var player in Model.Players)
            {
                <li>@player.Username (ID: @player.PlayerId)</li>
            }
        }
        else
        {
            <li>No players associated with this game.</li>
        }
    </ul>

    <a href="@Url.Action("Edit", new { id = Model.GameId })" class="btn btn-warning">Edit</a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
