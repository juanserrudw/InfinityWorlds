
@model infiniteworlds_frontend.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<h1>Delete Player</h1>

<h4>Are you sure you want to delete this player?</h4>
<hr />

<div>
    <h5>@Model.Username</h5>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Estado Cuenta</dt>
        <dd class="col-sm-10">@Model.EstadoCuenta</dd>
        <dt class="col-sm-2">User ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">Game ID</dt>
        <dd class="col-sm-10">@Model.GameId</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PlayerId" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
